@model JustFinderTest.City

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="kt-container  kt-grid__item kt-grid__item--fluid">
    <div class="kt-portlet">
        <div class="kt-portlet__head">
            <div class="kt-portlet__head-label">
                <h3 class="kt-portlet__head-title">
                    City Details
                </h3>
            </div>
        </div>
        <div class="kt-portlet__body">
            <div class="row">
                <dl class="dl-horizontal">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.city_name)
                    </dt>

                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.city_name)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.State.state_name)
                    </dt>

                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.State.state_name)
                    </dd>
                </dl>
            </div>
            <div>
                @Html.ActionLink("Edit", "Edit", new { id = Model.city_id }, new { @class = "btn btn-brand btn-icon-sm" }) |
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</div>