@model JustFinderTest.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="kt-container  kt-grid__item kt-grid__item--fluid">
    <div class="kt-portlet">
        <div class="kt-portlet__head">
            <div class="kt-portlet__head-label">
                <h3 class="kt-portlet__head-title">
                    Category Details
                </h3>
            </div>
        </div>
        <div class="kt-portlet__body">
            <div class="row">
                <dl class="dl-horizontal">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.category_name)
                    </dt>

                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.category_name)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.category_img)
                    </dt>

                    <dd class="col-sm-10">
                        @*<img src="../@Model.category_img" height="70px" width="70px" />*@
                        @Html.DisplayFor(model => model.category_img)
                    </dd>

                </dl>
            </div>
            <div>
                @Html.ActionLink("Edit", "Edit", new { id = Model.category_id }, new { @class = "btn btn-brand btn-icon-sm" }) |
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</div>