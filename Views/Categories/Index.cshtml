@model IEnumerable<JustFinderTest.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="kt-container  kt-grid__item kt-grid__item--fluid">


    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon-more-v2"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    Category
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <div class="dropdown dropdown-inline btn btn-default btn-icon-sm">

                        @Html.ActionLink("Add New", "Create")
                    </div>
                </div>
            </div>
        </div>

        <div class="kt-portlet__body">
            <!--begin: Search Form -->
            <div class="kt-form kt-form--label-right kt-margin-t-20 kt-margin-b-10">
                <div class="row align-items-center">
                    <div class="col-xl-8 order-2 order-xl-1">
                        <div class="row align-items-center">
                            <div class="col-md-4 kt-margin-b-20-tablet-and-mobile">
                                <div class="kt-input-icon kt-input-icon--left">
                                    <input type="text" class="form-control" placeholder="Search..." id="generalSearch">
                                    <span class="kt-input-icon__icon kt-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--end: Search Form -->
        </div>


        <div class="kt-portlet__body">
            <!--begin: Datatable -->
            <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_1">
                <thead class="text-center">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.category_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.category_img)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.category_name)
                        </td>
                        <td>
                            <img src="@Html.DisplayFor(modelItem => item.category_img)" height="70px" width="70px"/>
                        </td>
                        <td class="text-center">
                            @Html.ActionLink("Edit", "Edit", new { id = item.category_id }, new { @class = "btn btn-primary btn-icon-sm" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.category_id }, new { @class = "btn btn-danger btn-icon-sm" })
                        </td>
                    </tr>
                    }
                </tbody>

            </table>
            <!--end: Datatable -->
        </div>
        <div class="kt-portlet__body kt-portlet__body--fit">
            <!--begin: Datatable -->
            <div class="kt-datatable" id="child_data_local"></div>
            <!--end: Datatable -->
        </div>
    </div>
</div>